<br>
<p id="notice"><%= notice %></p>

<h1 class="title">Business Directory</h1><br>

<center>
<div class="input-group">
  <%= form_tag(businesses_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Directory" %>
    <%= submit_tag "Search", class: "btn btn-primary btn-sm" %>
  <% end %>
</div>
</center>
<br><br>

<table align="center" style="width: 95%" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Website</th>
    </tr>
  </thead>

  <tbody>
    <% @businesses.each do |business| %>
      <tr>
        <td><%= business.name %></td>
        <td><%= business.address %></td>
        <td><%= business.phone %></td>
        <td><%= business.website %></td>
      </tr>
    <% end %>
  </tbody>
</table>
