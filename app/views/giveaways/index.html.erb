<p id="notice"><%= notice %></p>

<h1>Listing Giveaways</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @giveaways.each do |giveaway| %>
      <tr>
        <td><%= giveaway.name %></td>
        <td><%= giveaway.phone %></td>
        <td><%= giveaway.email %></td>
        <td><%= giveaway.answer %></td>
        <td><%= link_to 'Show', giveaway %></td>
        <td><%= link_to 'Edit', edit_giveaway_path(giveaway) %></td>
        <td><%= link_to 'Destroy', giveaway, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

